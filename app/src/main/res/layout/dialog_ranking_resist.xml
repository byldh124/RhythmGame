<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bar_container_resist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/main"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭킹등록"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/font_ex"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bar_container_resist"
        android:hint="닉네임 설정"
        android:fontFamily="@font/font_ex"
        android:textColor="@color/main"
        android:textSize="14sp"
        android:background="@drawable/edit_text_shape"
        android:padding="8dp"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/et_nick"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btn_resist_true"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            app:backgroundTint="@null"
            android:layout_marginRight="8dp"
            android:text="등록"
            android:fontFamily="@font/font_ex"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_resist_false"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            app:backgroundTint="@null"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/font_ex"
            android:text="취소"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>